#particleFoam
decomposePar
mpirun -np 48 particleFoam -parallel | tee log.particleFoam
for i in {1..50}; do
    echo "Entering folder $i"

    cd "$i"
    bash Jobrun_mesh.sh #Jobrun_mesh deatails can be found in the directory set up section
    bash JobRun_case.sh
    cd ..

    echo "Finished folder $i"
done



